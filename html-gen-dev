if [ -z $1 ]; then
  echo "Error : invalid argument number"
else
  locale="en"
  title="HTML page"
  mention="<!--
  File auto-generated by the Exybore's HTML generator 0.2
  https://github.com/Exybore/sh-html-generator
-->"
  if [ -n $2 ]; then
    if [ $2 = "fr" ]; then
      locale="fr"
      title="Page HTML"
      mention="<!--
  Fichier auto généré par le générateur HTML 0.2 de Exybore
  https://github.com/Exybore/sh-html-generator
-->"
    fi
  fi
  echo "
<!DOCTYPE html>
<html lang=\"$locale\" dir=\"ltr\">
  <head>
    <title>$title</title>
    <meta charset=\"UTF-8\"/>
    <meta http-equiv=\"x-ua-compatible\" content=\"ie=edge\">
    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"/>
    <meta property=\"og:title\" content=\"$title\"/>
  </head>
  <body>

  </body>
</html>" >> $1
  echo "File auto-generated in $1"
fi
